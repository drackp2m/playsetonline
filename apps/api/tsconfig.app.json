{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "ES2021",
		"module": "CommonJS",
		"types": ["node", "webpack-env"],
		"outDir": "../../dist/out-tsc",
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts"],
	"include": ["**/*.ts"]
}
