{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		// "noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"paths": {
			"@set-online/api-definitions": ["libs/api-definitions/src/index.ts"],
			"@set-online/apollo-definitions": ["libs/api-definitions/src/lib/apollo/operations.ts"],
			"@set-online/api-sdk": ["libs/api-sdk/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
